<!-- Header -->
<header class="header">
    <div class="container">
        <div class="header-content">
            <h1 class="brand-title">{{ shop.name | default: 'BAGLUSH' }}</h1>
            <p class="brand-subtitle">Premium Lifestyle</p>
        </div>
    </div>
</header>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-background"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                {{ product.metafields.custom.hero_title | default: 'Your Perfect' }}
                <span class="hero-title-accent">{{ product.metafields.custom.hero_accent | default: 'Workout Companion' }}</span>
            </h1>
            <p class="hero-description">
                {{ product.metafields.custom.hero_description | default: 'Stylish, functional, and designed for the modern woman who demands both beauty and performance from her accessories.' }}
            </p>
            <div class="hero-actions">
                <button class="btn btn-cta" onclick="scrollToSection('color-selection')">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/>
                        <line x1="3" y1="6" x2="21" y2="6"/>
                        <path d="m16 10l-4 4-4-4"/>
                    </svg>
                    Shop Now - {{ product.price | money }}
                </button>
            </div>
        </div>
    </div>
    <div class="scroll-indicator">
        <div class="scroll-mouse">
            <div class="scroll-dot"></div>
        </div>
    </div>
</section>

<!-- Color Selection -->
<section id="color-selection" class="section section-muted">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Choose Your Style</h2>
            <p class="section-description">Express your personality with our curated palette of soft, dreamy colors</p>
        </div>
        
        <div class="color-selector">
            <h3 class="color-selector-title">Choose Your Color</h3>
            <div class="color-options" id="colorOptions">
                {% for variant in product.variants %}
                    {% if variant.option1 contains 'Color' or variant.option2 contains 'Color' or variant.option3 contains 'Color' %}
                        <button class="color-option {% if forloop.first %}selected{% endif %}" 
                                data-variant-id="{{ variant.id }}" 
                                data-color="{{ variant.title }}"
                                data-price="{{ variant.price | money }}"
                                style="background-color: {{ variant.metafields.custom.color_hex | default: '#F8BBD9' }}">
                            {% if forloop.first %}
                                <svg class="color-checkmark" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            {% endif %}
                        </button>
                    {% endif %}
                {% endfor %}
            </div>
            <p class="selected-color-name" id="selectedColorName">{{ product.variants.first.title | default: 'Pink' }}</p>
        </div>

        <!-- Add to Cart Form -->
        <form action="/cart/add" method="post" enctype="multipart/form-data" id="add-to-cart-form">
            <select name="id" id="variant-selector" style="display: none;">
                {% for variant in product.variants %}
                    <option value="{{ variant.id }}" {% if forloop.first %}selected{% endif %}>
                        {{ variant.title }} - {{ variant.price | money }}
                    </option>
                {% endfor %}
            </select>
            
            <div class="product-actions">
                <button type="submit" class="btn btn-cta" {% unless product.available %}disabled{% endunless %}>
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/>
                        <line x1="3" y1="6" x2="21" y2="6"/>
                        <path d="m16 10l-4 4-4-4"/>
                    </svg>
                    {% if product.available %}
                        Add to Cart - <span id="variant-price">{{ product.price | money }}</span>
                    {% else %}
                        Sold Out
                    {% endif %}
                </button>
            </div>
        </form>
    </div>
</section>

